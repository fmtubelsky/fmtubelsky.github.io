/* DO NOT EDIT THIS FILE UNLESS YOU KNOW WHAT YOU ARE DOING. AND YOU DON'T. -Saul */
{
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vsliveshare.vsliveshare", /* liveshare / collaborative coding */
                "vsls-contrib.gitdoc", /* automatic commit/push/pull on save */
                "html-validate.vscode-html-validate", /* html validator: https://marketplace.visualstudio.com/items?itemName=html-validate.vscode-html-validate */
                "smelukov.vscode-csstree" /* css validator: https://marketplace.visualstudio.com/items?itemName=smelukov.vscode-csstree */
                ],
            "settings": {
                "editor.folding": false,
                "editor.foldingHighlight": false,
                "editor.formatOnSave": false,
                "editor.guides.indentation": false,
                "editor.hover.enabled": false,
                "editor.lightbulb.enabled": "off",
                "editor.mouseWheelZoom": true,
                "editor.minimap.enabled": false,
                "editor.wordWrap": "on",
                "editor.stickyScroll.enabled": false,
                "html.autoClosingTags": false,
                "explorer.autoOpenDroppedFile": false, /* do not open a file that has been dropped into the file explorer. */
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 1000,
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true,
                "git.autofetch": true, /* Disable "Would you like Code to periodically run 'git fetch'?" toast */
                "git.terminalAuthentication": true,
                "github.gitAuthentication": true,
                "gitdoc.enabled": true,
                "gitdoc.pushMode": "push",
                "gitdoc.autoPull": "afterDelay",
                "gitdoc.commitMessageFormat": "ccc, LLL d, kkkk, h:mm a ZZ",
                "gitdoc.commitValidationLevel": "none",
                "workbench.welcomePage.walkthroughs.openOnInstall": false,
                "scm.countBadge": "off", /* disable git uncommitted count changes */
                "workbench.editor.closeOnFileDelete": true,
                "csstree.enable": true
            }
        }

    },
    "portsAttributes": {
        "8000": {
            "label": "Website",
            "onAutoForward": "openPreview" /* automatically open Simple Browser tab in the editor */
        }
    },
    "forwardPorts": [
        8000 /* default python http server port */
    ],
    /* "postCreateCommand": "gh codespace ports visibility 8000:org -c $CODESPACE_NAME", */ /* set visibility of port to organization */
    "postStartCommand": "python3 -m http.server"
}
